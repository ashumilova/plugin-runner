<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resources" type="org.eclipse.che.ide.ext.runner.client.RunnerResources"/>

    <ui:style>
        .scrollPanel {
            direction: rtl;
        }

        .runnerPanels {
            width: calc(100% + 1px);
            padding-bottom: 6px;
            margin-left: 5px;
            background: #313131;
        }

        .generalSeparator {
            position: relative;
            width: 100%;
            z-index: 1;
            box-shadow: -4px 0 6px 3px rgba(50, 50, 50, 0.75);
        }

        .topSeparator {
            height: 6px;
        }

        .bottomSeparator {
            top: -6px;
        }
    </ui:style>
    <g:FlowPanel addStyleNames="{resources.runnerCss.fullSize}">
        <g:SimplePanel addStyleNames="{style.generalSeparator} {style.topSeparator}"/>

        <g:ScrollPanel ui:field="scrollPanel" addStyleNames="{style.scrollPanel} {resources.runnerCss.fullSize}">
            <g:FlowPanel ui:field="runnersPanel" addStyleNames="{style.runnerPanels}"/>
        </g:ScrollPanel>

        <g:SimplePanel addStyleNames="{style.generalSeparator} {style.bottomSeparator}"/>
    </g:FlowPanel>
</ui:UiBinder>