<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .runnerSize {
            cursor: pointer;
            width: calc(100% - 1px);
            height: 50px;
            border-bottom: 1px solid #303030;
            border-top: 1px solid #878787;
            border-left: 1px solid #303030;
        }

        .runnerSize:active {
            border-top: 1px solid #303030;
            border-bottom: 1px solid #878787;
            border-left: 1px solid #303030;
        }

        .floatLeft {
            float: left;
        }

        .overflowHidden {
            overflow: hidden;
        }

        .runnerName {
            margin-top: 6px;
        }

        .timeLabel {
            margin-left: 90px;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" addStyleNames="{style.runnerSize}">
        <g:west size="40">
            <g:FlowPanel>
                <g:Image ui:field="image"/>
            </g:FlowPanel>
        </g:west>

        <g:north size="25">
            <g:FlowPanel addStyleNames="{style.overflowHidden}">
                <g:Label ui:field="runnerName" addStyleNames="{style.runnerName}"/>
            </g:FlowPanel>
        </g:north>

        <g:center>
            <g:FlowPanel>
                <g:Label ui:field="ram" addStyleNames="{style.floatLeft}"/>
                <g:Label ui:field="startTime" addStyleNames="{style.floatLeft} {style.timeLabel}"/>
            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>