<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resources" type="com.codenvy.ide.ext.runner.client.RunnerResources"/>
    <ui:with field="locale" type="com.codenvy.ide.ext.runner.client.RunnerLocalizationConstant"/>

    <ui:style>
        .container {
            width: 100%;
            height: 100%;
            margin-left: 5px;
        }

        .typeScopeLabels {
            float: left;
        }

        .scopeBtn {
            float: left;
            margin-left: 6px;
            margin-top: 2px;
            cursor: pointer;
        }

        .scopePanel {
            margin-top: 6px;
        }

        .scroll {
            width: 100%;
            height: 100%;
            right: 3px;
            direction: rtl;
        }

        .environmentPanel {
            margin-right: 2px;
            margin-left: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" addStyleNames="{style.container}">

        <!--type panel-->
        <g:north size="17">
            <g:FlowPanel>
                <g:Label text="{locale.templateType}" addStyleNames="{style.typeScopeLabels}"/>

                <g:FlowPanel ui:field="allButtonPanel"/>
                <g:FlowPanel ui:field="buttonsPanel"/>

            </g:FlowPanel>
        </g:north>

        <!--scope panel-->
        <g:north size="27">
            <g:FlowPanel addStyleNames="{style.scopePanel}">
                <g:Label text="{locale.templateScope}" addStyleNames="{style.typeScopeLabels}"/>

                <g:Image ui:field="systemScope" resource="{resources.scopeSystem}" addStyleNames="{style.scopeBtn}
                                                                                                  {resources.runnerCss.opacityButton}"/>
                <g:Image resource="{resources.scopeWorkspace}" addStyleNames="{style.scopeBtn}"/>
                <g:Image ui:field="projectScope" resource="{resources.scopeProject}" addStyleNames="{style.scopeBtn}"/>
                <g:Image resource="{resources.scopeUser}" addStyleNames="{style.scopeBtn}"/>
            </g:FlowPanel>
        </g:north>

        <!--templates panel-->
        <g:center>
            <g:FlowPanel>
                <g:ScrollPanel addStyleNames="{style.scroll}">
                    <g:FlowPanel ui:field="environmentsPanel" addStyleNames="{style.environmentPanel}"/>
                </g:ScrollPanel>
            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>