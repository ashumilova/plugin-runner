<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .runnerSize {
            width: 200px;
            height: 50px;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" addStyleNames="{style.runnerSize}">
        <g:west size="40">
            <g:FlowPanel ui:field="runnerImage"/>
        </g:west>

        <g:south size="25">
            <g:FlowPanel>
                <g:Label ui:field="runnerName"/>
            </g:FlowPanel>
        </g:south>

        <g:center>
            <g:FlowPanel>
                <g:Label ui:field="ram"/>
                <g:Label ui:field="startTime"/>
            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>