<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resources" type="com.codenvy.ide.ext.runner.client.RunnerResources"/>
    <ui:with field="locale" type="com.codenvy.ide.ext.runner.client.RunnerLocalizationConstant"/>

    <ui:style>
        .labelMargin {
            margin-bottom: 5px;
            margin-left: 5px;
        }

        .emptyBorder {
            margin: 10px;
        }

        .noResize {
            resize: none;
        }

        .gwt-TextBox {
            background-color: #4b4a4a;
            border: 1px solid #000000;
            color: #ffffff;
            position: relative;
            text-align: center;
        }

        .radioButton {
            margin-left: 42px;
            white-space: nowrap;
        }

        .radioButton label {
            padding-top: 2px;
            height: 17px;
            line-height: 17px;
        }

        .radioButton label::before {
            margin-top: 1px;
        }

        .radioButton span {
            display: block;
        }

        .treeContainer {
            margin: 5px;
            position: relative;
            border: 1px solid #272727;
            height: 323px;
        }

        .noEnvLabel {
            cursor: default;
            line-height: 250px;
            text-align: center;
            width: 100%;
            text-shadow: 0 1px 0 rgba(0, 0, 0, 1);
        }

        .floatLeft {
            float: left;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" width="600px" height="360px" addStyleNames="{style.emptyBorder} {resources.runnerCss.fontStyle}">

        <g:west size="240">
            <g:FlowPanel>
                <g:Label text="{locale.customRunnerEnvironment}" width="100%"
                         addStyleNames="{style.labelMargin} {resources.runnerCss.fontStyle}"/>
                <g:Label ui:field="noEnvLabel" text="No environments available" addStyleNames="{style.noEnvLabel}"/>
                <g:ScrollPanel ui:field="treeContainer" addStyleNames="{style.treeContainer}"/>
            </g:FlowPanel>
        </g:west>

        <g:north size="20">
            <g:FlowPanel>
                <g:Label text="{locale.customRunnerMemoryRunner}" width="100%" addStyleNames="{resources.runnerCss.fontStyle}"/>
            </g:FlowPanel>
        </g:north>

        <g:north size="25">
            <g:FlowPanel ui:field="memoryPanel1" visible="true" addStyleNames="{style.radioButton}">
                <!--when the text of RadioButton change is necessary to make changes
                in the method parseRadioButMemoryValue() of CustomRunViewImpl.class-->
                <g:RadioButton name="runnerMemory" text="128MB" width="75px" addStyleNames="{style.floatLeft}"/>
                <g:RadioButton name="runnerMemory" text="256MB" width="75px" addStyleNames="{style.floatLeft}"/>
                <g:RadioButton name="runnerMemory" text="512MB" width="75px" addStyleNames="{style.floatLeft}"/>
            </g:FlowPanel>
        </g:north>

        <g:north size="25">
            <g:FlowPanel ui:field="memoryPanel2" visible="true" addStyleNames="{style.radioButton}">
                <!--when the text of RadioButton change is necessary to make changes
                in the method parseRadioButMemoryValue() of CustomRunViewImpl.class-->
                <g:RadioButton name="runnerMemory" text="1GB" width="75px" addStyleNames="{style.floatLeft}"/>
                <g:RadioButton name="runnerMemory" text="2GB" width="75px" addStyleNames="{style.floatLeft}"/>
                <g:RadioButton name="runnerMemory" text="Other (MB):" ui:field="radioButOther" width="110px"
                               addStyleNames="{style.floatLeft}"/>
                <g:TextBox ui:field="otherValueMemory" height="12px" width="40px" maxLength="4" addStyleNames="{style.gwt-TextBox}
                                                                                                               {style.floatLeft}"/>
            </g:FlowPanel>
        </g:north>

        <g:north size="30">
            <g:FlowPanel>
                <g:Label text="{locale.customRunnerMemoryTotal}" width="302px" addStyleNames="{resources.runnerCss.fontStyle}
                                                                                              {style.floatLeft}"/>
                <g:TextBox readOnly="true" ui:field="memoryTotal" height="12px" width="40px" addStyleNames="{style.gwt-TextBox}
                                                                                                            {style.floatLeft}"/>
            </g:FlowPanel>
        </g:north>

        <g:north size="30">
            <g:FlowPanel>
                <g:Label text="{locale.customRunnerMemoryAvailable}" width="302px"
                         addStyleNames="{resources.runnerCss.fontStyle} {style.floatLeft}"/>
                <g:TextBox readOnly="true" ui:field="memoryAvailable" height="12px" width="40px" addStyleNames="{style.gwt-TextBox}
                                                                                                                {style.floatLeft}"/>
            </g:FlowPanel>
        </g:north>

        <g:north size="30">
            <g:FlowPanel>
                <g:Label text="{locale.customRunnerSkipBuild}" width="330px" addStyleNames="{resources.runnerCss.fontStyle}
                                                                                            {style.floatLeft}"/>
                <g:CheckBox ui:field="skipBuild" addStyleNames="{style.floatLeft}"/>
            </g:FlowPanel>
        </g:north>

        <g:north size="30">
            <g:FlowPanel>
                <g:Label text="{locale.customRunnerMemoryRunner}" width="330px" addStyleNames="{resources.runnerCss.fontStyle}
                                                                                               {style.floatLeft}"/>
                <g:CheckBox ui:field="rememberRunMemory" addStyleNames="{style.floatLeft}"/>
            </g:FlowPanel>
        </g:north>

        <g:center>
            <g:TextArea ui:field="descriptionField" readOnly="true" width="100%" addStyleNames="{style.noResize}}"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>