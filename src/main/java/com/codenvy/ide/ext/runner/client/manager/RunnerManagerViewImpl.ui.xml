<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resources" type="com.codenvy.ide.ext.runner.client.RunnerResources"/>
    <ui:with field="locale" type="com.codenvy.ide.ext.runner.client.RunnerLocalizationConstant"/>

    <ui:style>
        .runnerPanels {
            border-right: 1px solid #000000;
            background: #313131;
        }

        .button {
            width: 25px;
            height: 30px;
            margin-top: 2px;
            cursor: pointer;
            background: #313131;
            border-top: 1px dashed #616060;
            border-bottom: 1px dashed #616060;
        }

        .runButton {
            width: 25px;
            height: 30px;
            cursor: pointer;
            background: #313131;
            border-bottom: 1px dashed #616060;
        }

        .runButton:active {
            border-bottom: 1px solid #313131;
        }

        .buttonImage {
            margin-left: 2px;
            margin-top: 3px;
        }

        .buttonsPanel {
            width: 25px;
            border-left: 4px solid #474747;
            background: #313131;
            border-right: 1px solid #000000;
        }

        .button:active {
            border-top: 1px solid #313131;
            border-bottom: 1px solid #313131;
        }

        .tabsPanel {
            background: #313335;
            border-bottom: 1px solid #000000;
            box-shadow: 0 -1px 0 0 #4d4d4d;
        }

        .appInfoPanel {
            border-top: 1px solid #3b4b53;
            background: #313131;
        }

        .applicationLabel {
            color: #dbdbdb;
            margin-left: 12px;
            float: left;
            margin-top: 2px;
        }

        .appRefLabel {
            color: #0090e4;
            cursor: pointer;
            float: left;
            margin-top: 2px;
            margin-left: 6px;
        }

        .timeoutLabel {
            color: #dbdbdb;
            margin-right: 120px;
            float: right;
            margin-top: 2px;
        }

        .timeLabel {
            margin-right: 12px;
            float: right;
            margin-top: 1px;
        }

        .mainArea {
            background: #303030;
            width: 100%;
            height: calc(100% - 1px);
        }

        .stubPanel {
            background: #313131;
            border-top: 1px dashed #616060;
            margin-top: 2px;
        }

        .moreIcon {
            float: right;
            margin-top: 4px;
            margin-right: 6px;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" addStyleNames="{resources.runnerCss.fullSize}">
        <!--runners panel-->
        <g:west size="150">
            <g:FlowPanel ui:field="runnersPanel" addStyleNames="{style.runnerPanels}"/>
        </g:west>

        <!--buttons panel-->
        <g:west size="30">
            <g:FlowPanel addStyleNames="{style.buttonsPanel}">
                <g:FlowPanel ui:field="runPanel" addStyleNames="{style.runButton}">
                    <g:Image resource="{resources.runButton}" addStyleNames="{style.buttonImage}"/>
                </g:FlowPanel>

                <g:FlowPanel ui:field="stopPanel" addStyleNames="{style.button}">
                    <g:Image resource="{resources.stopButton}" addStyleNames="{style.buttonImage}"/>
                </g:FlowPanel>

                <g:FlowPanel ui:field="cleanPanel" addStyleNames="{style.button}">
                    <g:Image resource="{resources.cleanButton}" addStyleNames="{style.buttonImage}"/>
                </g:FlowPanel>

                <g:FlowPanel ui:field="dockerPanel" addStyleNames="{style.button}">
                    <g:Image resource="{resources.recipeButton}" addStyleNames="{style.buttonImage}"/>
                </g:FlowPanel>

                <g:FlowPanel addStyleNames="{style.stubPanel}"/>
            </g:FlowPanel>
        </g:west>

        <g:center>
            <g:FlowPanel>

                <g:DockLayoutPanel unit="PX" addStyleNames="{resources.runnerCss.fullSize}">
                    <!--tabs panel-->
                    <g:north size="25">
                        <g:FlowPanel ui:field="tabsPanel" addStyleNames="{style.tabsPanel}"/>
                    </g:north>

                    <!--app info panel-->
                    <g:south size="20">
                        <g:FlowPanel addStyleNames="{style.appInfoPanel}">
                            <g:FlowPanel>
                                <g:Label text="{locale.runnerLabelApplicationInfo}" addStyleNames="{style.applicationLabel}
                                                                                                   {resources.runnerCss.fontSizeTen}"/>
                                <g:Label ui:field="appReference" addStyleNames="{style.appRefLabel}
                                                                                {resources.runnerCss.fontSizeTen}"/>
                            </g:FlowPanel>

                            <g:FlowPanel>
                                <g:Image ui:field="moreInfo" resource="{resources.moreIcon}" addStyleNames="{style.moreIcon}"/>
                                <g:Label text="{locale.runnerLabelTimeoutInfo}" addStyleNames="{style.timeoutLabel}
                                                                                               {resources.runnerCss.fontSizeTen}"/>
                                <g:Label ui:field="timeout" addStyleNames="{style.timeLabel}
                                                                           {resources.runnerCss.fontSizeTen}"/>
                            </g:FlowPanel>
                        </g:FlowPanel>
                    </g:south>

                    <!--print panel-->
                    <g:center>
                        <g:FlowPanel ui:field="mainArea" addStyleNames="{style.mainArea}"/>
                    </g:center>
                </g:DockLayoutPanel>

            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>