<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resources" type="com.codenvy.ide.ext.runner.client.RunnerResources"/>
    <ui:with field="locale" type="com.codenvy.ide.ext.runner.client.RunnerLocalizationConstant"/>

    <ui:style>
        .scrollPanel {
            width: 100%;
            height: 100%;
            direction: rtl;
        }

        .runnerPanels {
            width: calc(100% + 1px);
            margin-left: 5px;
            background: #313131;
        }

        .buttonsPanel {
            width: 25px;
            border-left: 4px solid #474747;
            background: #313131;
            border-right: 1px solid #000000;
            box-shadow: inset 1px 0 0 0 #292929;
        }

        .tabsPanel {
            background: #313335;
            box-shadow: 0 -1px 0 0 #4d4d4d inset, inset 0 -2px 0 0 #000000;
        }

        .appInfoPanel {
            border-top: 1px solid #3b4b53;
            box-shadow: inset 0 1px 0 0 #000000;
            background: #263035;
        }

        .applicationLabel {
            color: #dbdbdb;
            margin-left: 12px;
            float: left;
            margin-top: 2px;
        }

        .appRefLabel {
            color: #0090e4;
            cursor: pointer;
            float: left;
            margin-top: 2px;
            margin-left: 6px;
        }

        .timeoutLabel {
            color: #dbdbdb;
            float: right;
            margin-top: 2px;
        }

        .timeLabel {
            cursor: pointer;
            width: 60px;
            color: #0090e4;
            float: right;
            margin-top: 2px;
        }

        .textArea {
            background: #303030;
            width: 100%;
            height: calc(100% - 1px);
        }

        .moreIcon {
            cursor: pointer;
            float: right;
            margin-top: 4px;
            margin-right: 6px;
        }

        .historyTemplate {
            width: calc(100% + 2px);
            height: 25px;
            background: #313335;
            box-shadow: inset -1px 0 0 #4d4d4d,
            inset -2px 0 0 #000000,
            inset 0 -1px 0 0 #000000;
        }

        .runnersContainer {
            background: #313131;
            box-shadow: inset -1px 0 0 0 #4d4d4d, inset -2px 0 0 0 #000000;
        }

        .moreInfoPanel {
            float: right;
            height: 60px;
            text-align: center;
        }
    </ui:style>

    <g:SplitLayoutPanel ui:field="mainPanel" addStyleNames="{resources.runnerCss.fullSize}">
        <!--runners panel-->
        <g:west size="155">
            <g:DockLayoutPanel ui:field="runnersContainer" unit="PX" addStyleNames="{style.runnersContainer}">
                <g:north size="25">
                    <g:FlowPanel ui:field="historyTemplatePanel" addStyleNames="{style.historyTemplate}"/>
                </g:north>
                <g:north size="6">
                    <g:FlowPanel/>
                </g:north>

                <g:center>
                    <g:ScrollPanel addStyleNames="{style.scrollPanel}">
                        <g:FlowPanel ui:field="runnersPanel" addStyleNames="{style.runnerPanels}"/>
                    </g:ScrollPanel>
                </g:center>

            </g:DockLayoutPanel>
        </g:west>

        <g:center>
            <g:DockLayoutPanel unit="PX" addStyleNames="{resources.runnerCss.fullSize}">

                <!--buttons panel-->
                <g:west size="30">
                    <g:FlowPanel ui:field="buttonsPanel" addStyleNames="{style.buttonsPanel}"/>
                </g:west>

                <!--tabs panel-->
                <g:north size="25">
                    <g:FlowPanel ui:field="tabsPanel" addStyleNames="{style.tabsPanel}"/>
                </g:north>

                <!--app info panel-->
                <g:south size="20">
                    <g:FlowPanel addStyleNames="{style.appInfoPanel}">
                        <g:FlowPanel>
                            <g:Label text="{locale.runnerLabelApplicationInfo}" addStyleNames="{style.applicationLabel}
                                                                                               {resources.runnerCss.fontSizeTen}"/>
                            <g:Label ui:field="appReference" addStyleNames="{style.appRefLabel}
                                                                            {resources.runnerCss.fontSizeTen}"/>
                        </g:FlowPanel>

                        <g:FlowPanel>
                            <g:FlowPanel ui:field="moreInfoPanel" addStyleNames="{style.moreInfoPanel}">
                                <g:Image ui:field="image" resource="{resources.moreIcon}" addStyleNames="{style.moreIcon}"/>

                                <g:Label ui:field="timeout" addStyleNames="{resources.runnerCss.fontSizeTen} {style.timeLabel}"/>
                            </g:FlowPanel>

                            <g:Label text="{locale.runnerLabelTimeoutInfo}" addStyleNames="{style.timeoutLabel}
                                                                                           {resources.runnerCss.fontSizeTen}"/>
                        </g:FlowPanel>
                    </g:FlowPanel>
                </g:south>

                <!--print panel-->
                <g:center>
                    <g:FlowPanel ui:field="textArea" addStyleNames="{style.textArea}"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
    </g:SplitLayoutPanel>

</ui:UiBinder>