<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resources" type="com.codenvy.ide.ext.runner.client.RunnerResources"/>
    <ui:with field="locale" type="com.codenvy.ide.ext.runner.client.RunnerLocalizationConstant"/>

    <ui:style>
        .runnerPanels {
            border-right: 1px solid #000000;
            background: #313131;
        }

        .buttonsPanel {
            width: 25px;
            border-left: 4px solid #474747;
            background: #313131;
            border-right: 1px solid #000000;
        }

        .tabsPanel {
            background: #313335;
            border-bottom: 1px solid #000000;
            box-shadow: 0 -1px 0 0 #4d4d4d;
        }

        .appInfoPanel {
            border-top: 1px solid #3b4b53;
            box-shadow: inset 0 1px 0 0 #000000;
            background: #313131;
        }

        .applicationLabel {
            color: #dbdbdb;
            margin-left: 12px;
            float: left;
            margin-top: 2px;
        }

        .appRefLabel {
            color: #0090e4;
            cursor: pointer;
            float: left;
            margin-top: 2px;
            margin-left: 6px;
        }

        .timeoutLabel {
            color: #dbdbdb;
            margin-right: 12px;
            float: right;
            margin-top: 2px;
        }

        .timeLabel {
            color: #0090e4;
            width: 50px;
            margin-right: 12px;
            float: right;
            margin-top: 1px;
        }

        .textArea {
            background: #303030;
            width: 100%;
            height: calc(100% - 1px);
        }

        .moreIcon {
            cursor: pointer;
            float: right;
            margin-top: 4px;
            margin-right: 6px;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" addStyleNames="{resources.runnerCss.fullSize}">
        <!--runners panel-->
        <g:west size="150">
            <g:FlowPanel ui:field="runnersPanel" addStyleNames="{style.runnerPanels}"/>
        </g:west>

        <!--buttons panel-->
        <g:west size="30">
            <g:FlowPanel ui:field="buttonsPanel" addStyleNames="{style.buttonsPanel}"/>
        </g:west>

        <g:center>
            <g:FlowPanel>

                <g:DockLayoutPanel unit="PX" addStyleNames="{resources.runnerCss.fullSize}">
                    <!--tabs panel-->
                    <g:north size="25">
                        <g:FlowPanel ui:field="tabsPanel" addStyleNames="{style.tabsPanel}"/>
                    </g:north>

                    <!--app info panel-->
                    <g:south size="20">
                        <g:FlowPanel addStyleNames="{style.appInfoPanel}">
                            <g:FlowPanel ui:field="moreInfoPanel">
                                <g:Label text="{locale.runnerLabelApplicationInfo}" addStyleNames="{style.applicationLabel}
                                                                                                   {resources.runnerCss.fontSizeTen}"/>
                                <g:Label ui:field="appReference" addStyleNames="{style.appRefLabel}
                                                                                {resources.runnerCss.fontSizeTen}"/>
                            </g:FlowPanel>

                            <g:FlowPanel>
                                <g:Image ui:field="moreInfoImage" resource="{resources.moreIcon}" addStyleNames="{style.moreIcon}"/>

                                <g:FlowPanel addStyleNames="{style.timeLabel}">
                                    <g:Label ui:field="timeout" addStyleNames="{resources.runnerCss.fontSizeTen}"/>
                                </g:FlowPanel>

                                <g:Label text="{locale.runnerLabelTimeoutInfo}" addStyleNames="{style.timeoutLabel}
                                                                                               {resources.runnerCss.fontSizeTen}"/>
                            </g:FlowPanel>
                        </g:FlowPanel>
                    </g:south>

                    <!--print panel-->
                    <g:center>
                        <g:FlowPanel ui:field="textArea" addStyleNames="{style.textArea}"/>
                    </g:center>
                </g:DockLayoutPanel>

            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>