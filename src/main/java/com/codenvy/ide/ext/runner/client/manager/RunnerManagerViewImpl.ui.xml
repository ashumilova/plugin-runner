<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resources" type="com.codenvy.ide.ext.runner.client.RunnerResources"/>
    <ui:with field="locale" type="com.codenvy.ide.ext.runner.client.RunnerLocalizationConstant"/>

    <ui:style>
        .runnerPanels {
            width: 200px;
            height: 100%;
            float: left;
        }

        .buttonPanels {
            width: 40px;
            height: 40px;
            cursor: pointer;
            border-bottom: 1px solid #303030;
            border-top: 1px solid #878787;
        }

        .buttonPanels:active {
            border-top: 1px solid #303030;
            border-bottom: 1px solid #878787;
        }

        .consoleTab {
            cursor: pointer;
            margin-left: 6px;
            margin-top: 4px;
            width: 70px;
            height: 20px;
            float: left;
        }

        .tabText {
            text-align: center;
            margin-top: 3px;
        }

        .terminalTab {
            cursor: pointer;
            width: 70px;
            height: 20px;
            float: left;
            margin-top: 4px;
        }

        .borderTop {
            border-top: 1px solid #878787;
        }

        .borderRight {
            border-right: 1px solid #878787;
        }

        .applicationLabel {
            margin-left: 12px;
            float: left;
            margin-top: 3px;
        }

        .appRefLabel {
            cursor: pointer;
            float: left;
            margin-top: 3px;
            margin-left: 6px;
        }

        .timeoutLabel {
            margin-right: 6px;
            float: right;
            margin-top: 3px;
        }

        .timeLabel {
            margin-right: 12px;
            float: right;
            margin-top: 3px;
        }

        .mainArea {
            background: #303030;
            border-top: 1px solid #878787;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX" addStyleNames="{resources.runnerCss.fullSize}">
        <!--runners panel-->
        <g:west size="200">
            <g:FlowPanel ui:field="runnersPanel" addStyleNames="{style.runnerPanels}"/>
        </g:west>

        <!--buttons panel-->
        <g:west size="40">
            <g:FlowPanel addStyleNames="{style.borderRight}">
                <g:FlowPanel ui:field="runPanel" addStyleNames="{style.buttonPanels}">
                    <g:Label text="Run" addStyleNames="{style.tabText}"/>
                    <g:Image/>
                </g:FlowPanel>

                <g:FlowPanel ui:field="stopPanel" addStyleNames="{style.buttonPanels}">
                    <g:Label text="Stop" addStyleNames="{style.tabText}"/>
                    <g:Image/>
                </g:FlowPanel>

                <g:FlowPanel ui:field="cleanPanel" addStyleNames="{style.buttonPanels}">
                    <g:Label text="Clean" addStyleNames="{style.tabText}"/>
                    <g:Image/>
                </g:FlowPanel>

                <g:FlowPanel ui:field="dockerPanel" addStyleNames="{style.buttonPanels}">
                    <g:Label text="Dock" addStyleNames="{style.tabText}"/>
                    <g:Image/>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:west>

        <g:center>
            <g:FlowPanel>

                <g:DockLayoutPanel unit="PX" addStyleNames="{resources.runnerCss.fullSize}">
                    <!--tabs panel-->
                    <g:north size="25">
                        <g:FlowPanel>
                            <g:FlowPanel ui:field="consoleTab" addStyleNames="{style.consoleTab} {resources.runnerCss.activeTab}">
                                <g:Label text="{locale.runnerTabConsole}" addStyleNames="{style.tabText}"/>
                            </g:FlowPanel>

                            <g:FlowPanel ui:field="terminalTab" addStyleNames="{style.terminalTab}">
                                <g:Label text="{locale.runnerTabTerminal}" addStyleNames="{style.tabText}"/>
                            </g:FlowPanel>
                        </g:FlowPanel>
                    </g:north>

                    <!--app info panel-->
                    <g:south size="23">
                        <g:FlowPanel addStyleNames="{style.borderTop}">
                            <g:FlowPanel>
                                <g:Label text="{locale.runnerLabelApplicationInfo}" addStyleNames="{style.applicationLabel}"/>
                                <g:Label ui:field="appReference" addStyleNames="{style.appRefLabel}"/>
                            </g:FlowPanel>

                            <g:FlowPanel>
                                <g:Label ui:field="timeout" addStyleNames="{style.timeLabel}"/>
                                <g:Label text="{locale.runnerLabelTimeoutInfo}" addStyleNames="{style.timeoutLabel}"/>
                            </g:FlowPanel>
                        </g:FlowPanel>
                    </g:south>

                    <!--print panel-->
                    <g:center>
                        <g:FlowPanel ui:field="mainArea" addStyleNames="{resources.runnerCss.fullSize} {style.mainArea}"/>
                    </g:center>
                </g:DockLayoutPanel>

            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>